<?xml version="1.0" encoding="iso-8859-1"?>

<idea-plugin>

  <extensions defaultExtensionNs="org.intellij.intelliLang">
    <languageSupport implementation="org.jetbrains.plugins.scala.injection.ScalaLanguageInjectionSupport"/>
    <injectionConfig config="org/jetbrains/plugins/scala/injection/scalaInjections.xml"/>
  </extensions>

  <extensions defaultExtensionNs="com.intellij">
    <multiHostInjector implementation="org.jetbrains.plugins.scala.injection.ScalaLanguageInjector"/>
    <!--<multiHostInjector implementation="org.jetbrains.plugins.scala.lang.scaladoc.injection.ScalaDocInnerCodeInjector"/>-->
    <regExpLanguageHost
            forClass="org.jetbrains.plugins.scala.lang.psi.impl.base.ScStringLiteralImpl"
            implementationClass="org.jetbrains.plugins.scala.injection.ScalaRegExpHost"/>
    <lang.elementManipulator
            forClass="org.jetbrains.plugins.scala.lang.psi.api.base.literals.ScStringLiteral"
            implementationClass="org.jetbrains.plugins.scala.injection.ScalaInjectedStringLiteralManipulator"/>
  </extensions>
    
  <extensions defaultExtensionNs="org.intellij.scala">
      <dependencyAwareInjectionSettings implementation="org.jetbrains.plugins.scala.settings.uiControls.IntelliLangInjectionSettings"/>
  </extensions>

</idea-plugin>