<idea-plugin>
  <id>org.intellijhocon</id>
  <name>HOCON</name>
  <description>HOCON support for IntelliJ</description>

  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="intellijhocon.HoconFileTypeFactory"/>
    <lang.syntaxHighlighterFactory key="HOCON" implementationClass="intellijhocon.HoconSyntaxHighlighterFactory"/>
  </extensions>

</idea-plugin>
